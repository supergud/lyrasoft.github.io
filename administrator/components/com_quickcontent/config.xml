<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_QUICKCONTENT_COMPONENT_LABEL"
		description="COM_QUICKCONTENT_COMPONENT_DESC"
		addfieldpath="administrator/components/com_quickcontent/models/fields"
		>
		<field name="use_custom_lorem"
			type="radio"
			label="COM_QUICKCONTENT_CONFIG_USE_CUSTOM_LOREM_LABEL"
			default="0"
			class="btn-group"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>


		<field name="lorem"
			type="editor"
			label="COM_QUICKCONTENT_CONFIG_LOREM_LABEL"
			filter="raw"
			/>
	</fieldset>


	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
		>

		<field name="rules" type="rules"
			component="com_quickcontent"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

</config>
